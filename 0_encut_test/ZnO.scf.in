 &control
    calculation  = 'scf'
    prefix       = 'ZnO',
    outdir       = 'outdir'
    pseudo_dir   = '~/PP_eff'
    restart_mode = 'from_scratch',
    tstress      = .true.
    tprnfor      = .true.
 /
 &system
    ibrav     = 4, 
    A         = 3.351
    C         = 5.226
    nat       = 4, 
    ntyp      = 2,
    ecutwfc   = $KATOF$,
 /
